@model TesteProjetoFront.Models.Curso

@{
    ViewData["Title"] = "Editar Curso";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="EditCurso">
    <div class="form-group">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DuracaoSemestre" class="control-label"></label>
        <input asp-for="DuracaoSemestre" class="form-control" />
        <span asp-validation-for="DuracaoSemestre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-primary" />
    </div>
</form>
