@model TesteProjetoFront.Models.Curso

<h1>@ViewData["Title"]</h1>

<form asp-action="CreateCurso" method="post">
    <div class="form-group">
        <label>Nome:</label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Duração do curso (Semestres):</label>
        <input asp-for="DuracaoSemestre" class="form-control" />
        <span asp-validation-for="DuracaoSemestre" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
</form>
